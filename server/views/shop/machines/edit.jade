form(id="drawingForm", name="drawingForm", ng-submit="save()")

  div.top-btn.pull-right
    button.btn(ng-click="cancel()") Cancel
    button.btn.btn-primary(type="submit") Save

  table.table.table-bordered
    tbody
      tr
        td.span2
          strong Machine Name
        td {{machine.name}}
      tr
        td.span2
          strong Machine #
        td
          input(type="text", name="number", ng-model="machine.number", placeholder="Machine #")
      tr
        td.span2
          strong Description
        td
          input(type="text", name="description", ng-model="machine.description", placeholder="Description")
      tr
        td.span2
          strong Notes
        td
          textarea(name="notes", ng-model="machine.notes", placeholder="Notes")