a.btn.btn-danger.pull-left.top-btn(ng-click='remove()', role='button')
  i.icon-remove.icon-white
  |  Delete this Program

a.btn.btn-primary.pull-right.top-btn(ng-href='/s/programs/{{program.id}}/edit', role='button')
  i.icon-edit.icon-white
  |  Edit this Program

table.table.table-bordered
  tbody
    tr
      td.span2
        strong Program #
      td {{program.number}}
    tr
      td.span2
        strong Location
      td {{program.location}}
    tr
      td.span2
        strong Description
      td {{program.description}}
    tr
      td.span2
        strong Notes
      td
        pre {{program.notes}}