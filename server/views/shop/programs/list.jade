p
  input(type="text", ng-model="search", class="input-large search-query", placeholder="Search")

table(class="table table-striped table-bordered table-hover")
  thead
    tr
      th Program #
      th Description

  tbody
    tr(ng-repeat="program in programs | filter:{MachineId:currentMachine} | filter:search | orderBy:number")
      td
        a(ng-href="/s/programs/{{program.id}}") {{program.number}}
      td {{program.description}}